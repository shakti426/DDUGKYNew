<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

<!--         android:paddingBottom="@dimen/dp_100"-->







        <LinearLayout
            android:id="@+id/llTopNonAreaInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background_light_grey"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvRFResidentialSupportFacality"
                android:fontFamily="@font/avenir_next_semi_bold"
                android:text="@string/support_facilities_available"
                android:textColor="@color/color_dark_green"
                android:textSize="@dimen/sp_16"
                app:layout_constraintEnd_toStartOf="@+id/ivSeccArrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </LinearLayout>

        <View
            android:id="@+id/viewRFResidentialsupportFacality"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_8"
            android:background="#F7F7F7"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llTopNonAreaInformation"/>













        <!-- Content Fields -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/RFResidentialsupportFacalityExpand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:elevation="@dimen/dp_2"
            android:padding="@dimen/dp_10"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewRFResidentialsupportFacality">
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone" />

<!--            <TextView-->
<!--                android:id="@+id/laiHeadingKitchen"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="@dimen/dp_15"-->
<!--                android:drawablePadding="8dp"-->
<!--                android:gravity="center"-->
<!--                android:text="@string/kitchen"-->
<!--                android:textColor="@color/color_green"-->
<!--                android:textSize="@dimen/sp_18"-->
<!--                android:textStyle="bold"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent" />-->

            <TextView
                android:id="@+id/labelSafeDrinikingAavailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawablePadding="8dp"
                android:text="@string/safe_driniking_available"
                android:textColor="@color/color_dark_green"
                android:textSize="@dimen/sp_18"
                app:drawableStartCompat="@drawable/drinkin_water"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                 />

            <TextView
                android:id="@+id/SafeDrinikingAavailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:textColor="@color/color_follow_up_title"
                android:text="@string/n_a"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelSafeDrinikingAavailable" />



            <TextView
                android:id="@+id/SafeDrinikingAavailableFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:text="@string/view"
                android:textColor="@color/color_dark_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/SafeDrinikingAavailable" />




            <TextView
                android:id="@+id/labelFirstAidKit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"

                android:drawablePadding="8dp"
                android:text="@string/first_aid_kit"
                android:textColor="@color/color_dark_green"
                android:textSize="@dimen/sp_18"
                app:drawableStartCompat="@drawable/first_aid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/SafeDrinikingAavailableFile" />








            <TextView
                android:id="@+id/FirstAidKit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:text="@string/n_a"
                android:textColor="@color/color_follow_up_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelFirstAidKit" />

            <TextView
                android:id="@+id/FirstAidKitFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:text="@string/view"
                android:textColor="@color/color_dark_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/FirstAidKit" />




            <TextView
                android:id="@+id/labelFireFightingEquipmentr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawablePadding="8dp"
                android:text="@string/fire_fighting_equipment"
                android:textColor="@color/color_dark_green"
                android:textSize="@dimen/sp_18"
                app:drawableStartCompat="@drawable/ic_equipment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/FirstAidKitFile" />

            <TextView
                android:id="@+id/FireFightingEquipmentr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:text="@string/n_a"
                android:textColor="@color/color_follow_up_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelFireFightingEquipmentr" />

            <TextView
                android:id="@+id/FireFightingEquipmentrFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:text="@string/view"
                android:textColor="@color/color_dark_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/FireFightingEquipmentr" />

            <TextView
                android:id="@+id/labelBiometricDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawablePadding="8dp"
                android:text="@string/biometric_device"
                android:textColor="@color/color_dark_green"
                android:textSize="@dimen/sp_18"
                app:drawableStartCompat="@drawable/baseline_fingerprint_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/FireFightingEquipmentrFile" />

            <TextView
                android:id="@+id/BiometricDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:text="@string/n_a"
                android:textColor="@color/color_follow_up_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelBiometricDevice" />

            <TextView
                android:id="@+id/BiometricDeviceFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:text="@string/view"
                android:textColor="@color/color_dark_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/BiometricDevice" />


            <TextView
                android:id="@+id/labelElectricalPowerBackup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawablePadding="8dp"
                android:text="@string/electrical_power_backup"
                android:textColor="@color/color_dark_green"
                android:textSize="@dimen/sp_18"
                app:drawableStartCompat="@drawable/ic_electrical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/BiometricDeviceFile" />

            <TextView
                android:id="@+id/ElectricalPowerBackup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:text="@string/n_a"
                android:textColor="@color/color_follow_up_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelElectricalPowerBackup" />

            <TextView
                android:id="@+id/ElectricalPowerBackupFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:text="@string/view"
                android:textColor="@color/color_dark_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ElectricalPowerBackup" />
















            <TextView
                android:id="@+id/labelGrievanceRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawablePadding="8dp"
                android:text="@string/grievance_register"
                android:textColor="@color/color_dark_green"
                android:textSize="@dimen/sp_18"
                app:drawableStartCompat="@drawable/ic_residential"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ElectricalPowerBackupFile" />

            <TextView
                android:id="@+id/GrievanceRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:text="@string/n_a"
                android:textColor="@color/color_follow_up_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelGrievanceRegister" />

            <TextView
                android:id="@+id/GrievanceRegisterFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:text="@string/view"
                android:textColor="@color/color_dark_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/GrievanceRegister" />





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llNonAreaInformationApproval"
                android:text="@string/select_approvals"
                android:layout_marginTop="@dimen/dp_20"
                android:textColor="@color/color_dark_green"
                android:textSize="@dimen/sp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/GrievanceRegisterFile"
                />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:hint="@string/select_approval"
                android:id="@+id/llNonLivingAreaInformation"
                android:layout_marginStart="@dimen/dp_3"
                android:textColorHint="@color/color_dark_green"
                app:boxStrokeColor="@color/color_dark_green"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llNonAreaInformationApproval"
                >



                <AutoCompleteTextView
                    android:id="@+id/SpinnerRFResidentialsupportFacality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="none"
                    android:textColor="@color/color_dark_green"
                    android:textSize="15sp"
                    tools:ignore="LabelFor"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRFResidentialsupportFacalityRemarks"
                android:visibility="gone"
                android:text="@string/remarkss"
                android:layout_marginTop="@dimen/dp_20"
                android:textColor="@color/color_dark_green"
                android:textSize="@dimen/sp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llNonLivingAreaInformation"


                />

            <EditText
                android:id="@+id/etRFResidentialsupportFacalityRemarks"
                style="@style/EditText"
                android:visibility="gone"
                android:hint="@string/remarks"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRFResidentialsupportFacalityRemarks"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/llRFResidentialFacalityBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etRFResidentialsupportFacalityRemarks">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/btnRFResidentialsupportFacalityPrevious"
                    android:elevation="4dp"
                    android:text="@string/previous"
                    android:textColor="@color/color_dark_blue"
                    android:textSize="@dimen/sp_16"
                    android:background="@drawable/backgroung_overlay"
                    android:layout_margin="8dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/save_and_next"
                    android:gravity="center"
                    android:id="@+id/btnRFResidentialsupportFacalityNext"
                    android:textColor="@color/white"
                    android:elevation="4dp"
                    android:textSize="@dimen/sp_16"
                    android:background="@drawable/card_background"
                    android:layout_margin="8dp" />


            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
