                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llTopFin"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/verFinExpand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:elevation="@dimen/dp_2"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/llTopFin"
                app:layout_constraintStart_toStartOf="parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewFin"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    tools:listitem="@layout/item_field_ver_card"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/finRemarks"
                    android:text="@string/remarkss"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColor="@color/color_dark_green"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerViewFin"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/etFinRemarks"
                    style="@style/EditText"
                    android:hint="@string/remarks"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/finRemarks"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:id="@+id/llBtn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerViewFin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/btnFinPrevious"
                        android:elevation="4dp"
                        android:text="@string/previous"
                        android:textColor="@color/color_dark_blue"
                        android:textSize="@dimen/sp_16"
                        android:background="@drawable/backgroung_overlay"
                        android:layout_margin="8dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/save_and_next"
                        android:gravity="center"
                        android:id="@+id/btnFinNext"
                        android:textColor="@color/white"
                        android:elevation="4dp"
                        android:textSize="@dimen/sp_16"
                        android:background="@drawable/card_background"
                        android:layout_margin="8dp" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Training details -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/verTraining"
            style="@style/editTextHome"
            android:layout_width="match_parent"
