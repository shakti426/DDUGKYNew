<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <!-- Grid container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gridContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1 - Column 1 -->
        <TextView
            android:id="@+id/tvYearPlacement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Year: 2022-23"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvCandidatePlaced"
            android:layout_marginEnd="8dp" />

        <!-- Row 1 - Column 2 -->
        <TextView
            android:id="@+id/tvCandidatePlaced"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Allocated: 100"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/tvYearPlacement"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Row 2 - Column 1 -->
        <TextView
            android:id="@+id/tvSanctionOrderIdPlacement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Achieved: 90"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvYearPlacement"
            app:layout_constraintEnd_toStartOf="@+id/tvEsicNumberPlacement"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp" />

        <!-- Row 2 - Column 2 -->
        <TextView
            android:id="@+id/tvEsicNumberPlacement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Placed: 85"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvCandidatePlaced"
            app:layout_constraintStart_toEndOf="@id/tvSanctionOrderIdPlacement"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Row 3 - Column 1 -->
        <TextView
            android:id="@+id/tvEpfoNumberPlacement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Achieved: 90"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSanctionOrderIdPlacement"
            app:layout_constraintEnd_toStartOf="@+id/tvEsicNumberPlacement"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewPlacement"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="View"
        android:textAllCaps="false"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:backgroundTint="@android:color/transparent"
        app:strokeWidth="2dp"
        app:strokeColor="@android:color/holo_blue_dark"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/gridContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="@color/color_dark_blue"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/btnViewPlacement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
